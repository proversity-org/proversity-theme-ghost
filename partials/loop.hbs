{{!-- This is the post loop - each post will be output using this markup --}}
    
<div id="featurePosts" class="features">

    {{#get "posts" include="tags,author" limit="1" as |recents|}}
        {{#foreach recents}}
            <article class="feature-posts" {{#if image}} style='background: url("{{image}}") center;' {{else}} style='background: url("{{asset "images/image.jpg"}}) center;' {{/if}}>
                
                <div class="overlay">
                    <a href="{{url}}">
                        <section id="{{id}}">
                            <header class="post-header feature-post-title">
                                <h2 class="post-title">{{title}}</h2>
                            </header>

                            <section class="post-meta">
                                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                            </section>

                            <section class="post-excerpt">
                                <p>{{excerpt words="50"}} <a class="read-more" href="{{url}}">...</a></p>
                            </section>
                        </section>
                    </a>
                </div>
                
            </article>
        {{/foreach}}
    {{/get}}

